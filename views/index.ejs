<%- include('partials/header.ejs'); %>
<body>
	<%- include('partials/navbar.ejs'); %>
	<div class="container">
		<hr>
		<h1>Questions</h1>
		<hr>
		<a href="/newquestion" class="btn btn-primary">Make a question</a>
		<hr>
		<% questions.forEach(question => { %>
			<br>
			<div class="card">
				<div class="card-body">
					<h3><%= question.title %></h3>
				</div>
				<div class="card-footer">
					<a href="/question/<%= question.id%>" class="btn btn-primary">To respond...</a>
				</div>
			</div>
		<%});%>
	</div>
</body>
<%- include('partials/footer.ejs'); %>